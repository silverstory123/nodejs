<!-- Web Main -->
<!DOCTYPE html>
<html>

<head>

  <style>
    .leftcolumn {
      margin-top: 10px;
      float: left;
      width: 10%;
      background-color: black;
    }

    /* Right column */
    .rightcolumn {
      margin-top: 10px;
      float: left;
      width: 90%;
      background-color: #f1f1f1;
      padding-left: 20px;
    }

    .grid-box {
      display: grid;
      grid-gap: 20px;
      grid-template-columns: repeat(4, 1fr);
      margin-bottom: 20px;
    }

    .cell {
      display: grid;
      align-items: center;
      justify-content: center;
      box-shadow: 0 0px 2px rgb(0 0 0 / 7%), 0 5px 6px rgb(0 0 0 / 16%);
      width: 400px;
      height: 400px;
      background-color: #ffe186;
    }

    .card {
      background-color: white;
      width: 400px;
      padding: 10px;
      margin-top : -13px;
    }
    
    .fakeimg {
      background-color: #aaa;
      width: 100%;
      height:250px;
      padding: 10px;
    }

    @media screen and (max-width: 500px) {

      .leftcolumn,
      .rightcolumn {
        width: 100%;
        padding: 0;
      }

      .grid-box {
        display: grid;
        grid-gap: 20px;
        grid-template-columns: repeat(1, 1fr);
        margin-bottom: 20px;
        padding-left: 20px;
      }
    }

    .rightcolumn a {
      float: left;
      display: block;
      color: #111111;
      text-align: center;
      padding: 14px 16px;
      text-decoration: none;
    }

    @media screen and (max-width: 800px) {
      .topnav a {
        float: none;
        width: 100%;
      }
    }
  </style>
</head>

<body>
  <% if(!session){ %>
  <%- include('./header.ejs') %>
  <% }else{ %>
  <%- include('./header_logout.ejs') %>
  <% } %>
    <div class="row">
      <div class="leftcolumn">
        left page
      </div>
      <div class="rightcolumn">
        <div class="row mt-4">
          <div class="col-12">
            <div class="grid-box">
              <% if (post.length >= 1 ){ %>
              <% for (var i=0; i < post.length ; i++){ %>
                <div class="cell">
                  <a href="/stream/<%=post[i].video_name %>">
                    <div class="card">
                      <div class="fakeimg"></div>
                      <h2>
                        <%= post[i].user_id %>
                      </h2>
                      <h5>
                        <%= post[i].video_name %>
                      </h5>
                      <p>

                      </p>
                      <p>
                        <%= post[i].video_path %>
                      </p>
                    </div>
                  </a>
                </div>
                <% }} else { %>
                  존재하는 동영상이 없습니다.
                  <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
</body>

</html>